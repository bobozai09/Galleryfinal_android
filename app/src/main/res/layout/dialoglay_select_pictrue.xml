<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="#ffffff"    android:orientation="vertical">    <!--    android:layoutAnimation="@anim/layout_anim_for_flowlayout"-->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:gravity="center"        android:orientation="horizontal"        android:paddingBottom="14px"        android:paddingTop="12px">        <TextView            android:id="@+id/takePicTV"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:background="@drawable/comm_ripple_bg"            android:drawablePadding="14px"            android:drawableTop="@drawable/get_photo_cemare"            android:gravity="center"            android:paddingBottom="20px"            android:paddingLeft="40px"            android:paddingRight="40px"            android:paddingTop="20px"            android:text="拍照"            android:textColor="#999999"            android:textSize="24px" />        <TextView            android:id="@+id/selectPicTV"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="44px"            android:background="@drawable/comm_ripple_bg"            android:drawablePadding="14px"            android:drawableTop="@drawable/get_photo_selection"            android:gravity="center"            android:paddingBottom="20px"            android:paddingLeft="40px"            android:paddingRight="40px"            android:paddingTop="20px"            android:text="从照片选择"            android:textColor="#999999"            android:textSize="24px" />    </LinearLayout>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="#fafafa">        <TextView            android:id="@+id/cancelTV"            android:layout_width="match_parent"            android:layout_height="96px"            android:background="@drawable/comm_ripple_bg"            android:gravity="center"            android:text="取消"            android:textColor="#5376a0"            android:textSize="32px" />    </RelativeLayout></LinearLayout>